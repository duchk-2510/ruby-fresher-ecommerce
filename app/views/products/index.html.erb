<% provide :title, @title || @category.title %>
<div style="overflow: auto; white-space: nowrap;">
  <%= render @categories %>
  <% if @categories.count > 0 && @category %>
    <div style="display: inline-block; padding: 1vw;">
      <%= link_to other_category_products_path(category_id: @category.id),
                  style: "width: 15vw; height: 15vw; text-align:center;" do %>
        <%= image_tag "https://www.mageplaza.com/assets/img/extensions/product-labels.png",
                      size: Settings.category.img_max_size, style: "display:block; margin-left: auto; margin-right: auto;" %>
        <p><%= t :other %></p>
      <% end %>
    </div>
  <% end %>
</div>
<%= render "categories/breadcrumb" %>
<%= render "products/display_option" %>
<div class="row">
  <%= render @products %>
</div>
<div style="text-align: center;"><%= will_paginate @products %></div>
